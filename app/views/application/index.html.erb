			  		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
						<p><%= t('start_page.about_hpi.lead_html') %></p>
			  		</div>
			  		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
			  			<%= image_tag "about_hpi.jpg", class: "center-block img-responsive img-rounded img-float-corner-tr" %>
			  		</div>
			  	</div>
			  </div>
			</div>
		</div>
	</div>
</section>
